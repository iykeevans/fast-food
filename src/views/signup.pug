doctype html(lang='en')
head
  html
    meta(charset='UTF-8')     
    meta(name='viewport', content='width=device-width, initial-scale=1.0')   
    meta(http-equiv='X-UA-Compatible', content='ie=edge')     
    link(rel='stylesheet', href='/assets/stylesheets/loginStyle.css')     
    title Fast Food
  body
    section.background     
    nav.heading
      a(href='#') FAST-FOOD-FAST     
    section.user-authentication
      .user_options-container
        .user_options-text
          .user_options-unregistered
            h2.user_unregistered-title Don't have an account?                     
            p.user_unregistered-text
              | You are welcome to register a new customer account in our shop! 
              br                     
            p.user_unregistered-text
              | Remenber! You dont have to create a new account if you already have one. 
              br                     
            button#signup-button.user_unregistered-signup Sign up                 
          .user_options-registered
            h2.user_registered-title Have an account?                     
            p.user_registered-text
              | If you already have an Account with us just Log In! 
              br
              br
              br
              br                     
            button#login-button.user_registered-login Login             
        #user_options-forms.user_options-forms
          .user_forms-login
            h2.forms_title Login                     
            form.forms_form
              fieldset.forms_fieldset
                .forms_field
                  input.forms_field-input(type='email', placeholder='Email', required='', autofocus='')                             
                .forms_field
                  input.forms_field-input(type='password', placeholder='Password', required='')                         
              .forms_buttons
                button#forget-button.forms_buttons-forgot(type='button') Forgot password?                             
                button.forms_buttons-action(type='submit') Login                             
                a#signup-button-mb.forms_buttons-mb-button Sign up                 
          .user_forms-signup
            h2.forms_title Sign Up                     
            form.forms_form
              fieldset.forms_fieldset
                .forms_field
                  input.forms_field-input(type='text', placeholder='Full Name', required='')                             
                .forms_field
                  input.forms_field-input(type='email', placeholder='Email', required='')                            
                .forms_field
                  input.forms_field-input(type='password', placeholder='Password', required='')                         
              .forms_buttons
                button.forms_buttons-action(type='submit') Sign up                             
                a#login-button-mb.forms_buttons-mb-button Login                 
          .user_forms-forgot
            h2.forms_title.forgot Forgot Password                     
            form.forms_form
              fieldset.forms_fieldset
                .forms_field
                  input.forms_field-input(type='email', placeholder='Email', required='', autofocus='')                         
              .forms_buttons
                button.forms_buttons-action(type='submit') Send reset link     
    script(src='/assets/javascripts/loginJS.js')
